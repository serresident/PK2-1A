                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  />

                            </Grid.ColumnDefinitions>


                            <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,10,3" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="49" />
                                    <RowDefinition Height="132" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  Width="140"/>
                                    <ColumnDefinition  Width="140"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Тек. pH:" VerticalAlignment="Center"   HorizontalAlignment="Center" FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF646464" Height="26" Width="76"/>


                                <TextBlock Text="Загр.щел-чи: " Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF646464" Margin="8,0,0,0" Height="26" Width="132"/>
                                <TextBlock Text="Заданный pH: " Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="16"
                           FontWeight="Bold"
                           Foreground="Blue" Margin="0,3,16,0" Height="21" Width="114"/>

                                <TextBlock Text="Зад. доза &#10; щелочи: " Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16"
                           FontWeight="Bold"
                           Foreground="blue" Margin="28,0,0,0" Height="44" Width="77"/>


                                <TextBlock  Grid.Column="1"
                            Height="28"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="LawnGreen"
                            Text="{Binding PD.QIY_K480A, StringFormat=\{0:0.0 \}, FallbackValue=???}"   
                            VerticalAlignment="Center"   TextAlignment="Left" Background="Black" RenderTransformOrigin="0.329,0.607"    />
                                <TextBlock Grid.Column="1"  
                           Grid.Row="1" 
                           Height="28"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="LawnGreen"
                           Text="{Binding PD.RegPH480A_doza, StringFormat=\{0:0.0 кг\}, FallbackValue=???}"    
                           VerticalAlignment="Center"   TextAlignment="Left" Background="Black"  />


                                <Controls:NumPadUpDown
                     IsEnabled="{Binding PD.RegPH480A_Start, Converter={StaticResource BooleanNegateConverter}}"
            Grid.Row="2"
            Grid.Column="1"
            Height="30"
            Margin="4,0,16,0"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            EnterClosesNumPad="True"
            FontSize="16"
            FontWeight="Bold"
            
            Increment="0.1"
            Minimum="0"
            Precision="1"
            UpdateValueOnEnterKey="True" CultureInfo="ru-RU">
                                    <Behaviors:Interaction.Behaviors>
                                        <behaviors:ModbusBindingBehavior InternalValue="{Binding PD.RegPH480A_pH_zad}" />
                                    </Behaviors:Interaction.Behaviors>
                                </Controls:NumPadUpDown>

                                <Controls:NumPadUpDown
                     IsEnabled="{Binding PD.RegPH480A_Start, Converter={StaticResource BooleanNegateConverter}}"
            Grid.Row="3"
            Grid.Column="1"
            Height="30"
            Margin="5,7,15,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            EnterClosesNumPad="True"
            FontSize="16"
            FontWeight="Bold"
            
            Increment="0.1"
            Minimum="-1"
            Precision="1"
            UpdateValueOnEnterKey="True">
                                    <Behaviors:Interaction.Behaviors>
                                        <behaviors:ModbusBindingBehavior InternalValue="{Binding PD.RegPH480A_DozaZad}" />
                                    </Behaviors:Interaction.Behaviors>
                                </Controls:NumPadUpDown>










                            </Grid>
