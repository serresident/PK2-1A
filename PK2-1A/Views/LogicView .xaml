<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:belofor.Views"
             xmlns:helpers="clr-namespace:belofor.Helpers"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
             xmlns:WPF="clr-namespace:AITSW.PCPANEL.WPF;assembly=PCPANEL_WPF_Controls" xmlns:CalcBinding="clr-namespace:CalcBinding;assembly=CalcBinding" xmlns:b="http://schemas.microsoft.com/xaml/behaviors" xmlns:Behaviors="clr-namespace:belofor.Behaviors" x:Class="belofor.Views.LogicView"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <xctk:BusyIndicator IsBusy="{Binding IsBusy}" >


        <TabControl>
            <TabItem Header="Белофор ОЦД 2-3 конденсации">
                <Canvas Background="#FFF9EFDA">

                    <Grid ShowGridLines="True" Height="272" Width="600">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition />
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>


                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Шаг"  FontSize="24" Grid.Row="0"  Grid.Column="0"   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Text="1"  FontSize="24" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <WPF:Label  Grid.Row="1" Height="36" Content="NC_K480B" FontWeight="Bold" Foreground="Black"  Width="auto"  Design="Arrowed" ItemDeterminationValue="{c:Binding (PD.NC_K480B_Cur_FRQ less 0) ? 0 : 1}"  DefaultText="{Binding PD.NC_K480B_Cur_FRQ, StringFormat=\{0\}Гц}" ArrowWidth="5" >
                            <WPF:Label.States>
                                <WPF:StatesStandard  Critical="{c:Binding (PD.NC_K480B_Cur_FRQ less 0)}"  Active="{c:Binding (PD.NC_K480B_Cur_FRQ &gt; 0)}"/>
                            </WPF:Label.States>

                            <WPF:Label.Colors>
                                <WPF:ControlColors >
                                    <WPF:ControlColors.DefaultColoring>
                                        <WPF:ColoringColor Frequency="0.5" Color1="LightBlue" />

                                        <!--<WPF:ColoringColor Frequency="0.5" Color1="{c:Binding '(PD.P726_Cur_FRQ less) ? \'Green\':\'Green\''}" />-->
                                    </WPF:ControlColors.DefaultColoring>
                                    <WPF:ControlColors.State1Coloring>
                                        <WPF:ColoringColor Frequency="0.5" Color1="LightGray"  />
                                    </WPF:ControlColors.State1Coloring>
                                    <WPF:ControlColors.State4Coloring>
                                        <WPF:ColoringColor Frequency="0.5" Color1="LightGreen" />
                                    </WPF:ControlColors.State4Coloring>
                                </WPF:ControlColors>
                            </WPF:Label.Colors>

                            <WPF:Label.Items>
                                <WPF:ValueTextItem Text="{Binding PD.NC_K480B_Cur_FRQ, StringFormat=\{0\}Гц}"  Value="1"/>
                                <WPF:ValueTextItem  Text="Нет связи c ПЧ" Value="0"/>
                            </WPF:Label.Items>
                        </WPF:Label>
                        <TextBlock Foreground="Green" Text="50 Гц"  FontSize="24" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Border 
        Grid.Column="1" 
        Grid.Row="0" 
        Grid.RowSpan="4" 
        BorderThickness="4"
        BorderBrush="DarkGreen"         
        Background="Transparent"/>
                    </Grid>
                </Canvas>
            </TabItem>
            <TabItem Header="2"/>
        </TabControl>


    </xctk:BusyIndicator>
</UserControl>
